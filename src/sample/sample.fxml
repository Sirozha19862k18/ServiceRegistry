<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="center" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">

<MenuBar>
    <Menu text="File">
    <items>
        <MenuItem fx:id="appExit" onAction="#appExit" text="Выход" />
    </items>
    </Menu>
    <Menu text="Операции">
    <items>
        <MenuItem fx:id="openClientList" onAction="#openXML" text="Вывести список клиентов" />
    </items>
    </Menu>
</MenuBar>
    <HBox>
        <ListView fx:id="list" onMouseClicked="#listMouseClicked" prefHeight="700" prefWidth="250" />
      <TabPane prefHeight="700" prefWidth="850">
          <tabs>
          <Tab closable="false" text="Протокол">
       <content>
           <Pane>
            <TextField fx:id="numberOfIncident" layoutX="175.0" layoutY="22.0" />
            <TextField fx:id="dateOfIncidentTextField" layoutX="174.0" layoutY="57.0" />
            <TextField fx:id="employerCounterTextField" layoutX="174.0" layoutY="296.0" prefHeight="25.0" prefWidth="88.0" />
            <TextArea fx:id="problemNameTextArea" layoutX="15.0" layoutY="111.0" prefHeight="153.0" prefWidth="750.0" />
            <Label layoutX="25.0" layoutY="26.0" text="Номер протокола" />
            <Label layoutX="26.0" layoutY="61.0" text="Дата инцидента" />
            <Label layoutX="275.0" layoutY="94.0" text="Описание проблемы" />
            <Label layoutX="30.0" layoutY="292.0" text="Количество человек " />
            <Label layoutX="30.0" layoutY="308.0" text="на выезде" />
            <Label layoutX="30.0" layoutY="346.0" text="Фамилии" />
            <TextField fx:id="employerNameTextField" layoutX="174.0" layoutY="342.0" prefHeight="25.0" prefWidth="464.0" />
            <TextField fx:id="carDrivingToIncidentTextField" layoutX="174.0" layoutY="387.0" />
            <TextField fx:id="mileageTextField" layoutX="174.0" layoutY="424.0" />
            <Label layoutX="30.0" layoutY="400.0" text="Автомобиль" />
            <Label layoutX="30.0" layoutY="428.0" text="Пробег" />
            <TextArea fx:id="fixProblemTextArea" layoutX="15.0" layoutY="477.0" prefHeight="153.0" prefWidth="750.0" />
            <Label layoutX="275.0" layoutY="460.0" text="Описание решения проблемы" />
            <TextField fx:id="employerTimeTextField" layoutX="543.0" layoutY="296.0" prefHeight="25.0" prefWidth="89.0" />
            <Label layoutX="336.0" layoutY="301.0" text="Время устранения проблемы" />
            <Button fx:id="SaveXML" disable="true" layoutX="348.0" layoutY="630.0" mnemonicParsing="false" onAction="#saveXML" text="Сохранить изменения" />
           </Pane>
       </content>
          </Tab>
              <Tab closable="false" text="Клиенты">
                  <content>
                      <Pane>
                     <Accordion layoutX="44.0" layoutY="39.0">
                       <panes>
                         <TitledPane animated="false" text="Добавить клиента">
                           <content>
                             <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="183.0" prefWidth="472.0">
                                    <children>
                                            <Label layoutX="214.0" layoutY="49.0" text="Наименование нового клиента" />
                                            <TextField fx:id="newClientNameTextField" layoutX="140.0" layoutY="79.0" prefHeight="26.0" prefWidth="369.0" />
                                            <Button fx:id="addClientToBaseBtn" layoutX="250.0" layoutY="123.0" mnemonicParsing="false" onAction="#addClientToBase" prefHeight="30" prefWidth="100" text="ОК" />
                                    </children>
                                 </AnchorPane>
                           </content>
                         </TitledPane>
                         <TitledPane animated="false" text="Удалить клиента">
                           <content>
                             <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="348.0" prefWidth="600.0">
                                    <children>
                                       <ListView layoutX="26.0" layoutY="14.0" prefHeight="312.0" prefWidth="184.0" />
                                       <Button layoutX="342.0" layoutY="145.0" mnemonicParsing="false" text="Удалить выбранного" />
                                    </children>
                                 </AnchorPane>
                           </content>
                         </TitledPane>
                         <TitledPane animated="false" text="Статистика">
                           <content>
                             <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                    <children>
                                       <Label layoutX="30.0" layoutY="35.0" text="Количество клиентов" />
                                       <Button layoutX="44.0" layoutY="132.0" mnemonicParsing="false" text="Вывести" />
                                       <Label layoutX="30.0" layoutY="67.0" text="Количество инцидентов" />
                                    </children></AnchorPane>
                           </content>
                         </TitledPane>
                       </panes>
                     </Accordion>
                      </Pane>
                  </content>
              </Tab>
          </tabs>
      </TabPane>
    </HBox>

    <HBox spacing="50">
        <Button fx:id="openXML" maxHeight="Infinity" mnemonicParsing="false" onAction="#openXML" text="Вывести список клиентов" HBox.hgrow="ALWAYS" />
    </HBox>
 

</VBox>
